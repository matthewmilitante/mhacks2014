<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pinly"
    android:versionCode="1"
    android:versionName="1.0" >
    
	<uses-feature android:name="android.hardware.camera"
                  android:required="true" />
	    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logotran"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.pinly.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
    	     android:name = "com.example.pinly.addOptions">
    	</activity>
    	<activity 
    	     android:name = "com.example.pinly.outfits">
    	</activity>
    	<activity 
    	     android:name = "com.example.pinly.removeOptions">
    	</activity>
    </application>

</manifest>
